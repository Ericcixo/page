# 1. Proteger archivos sensibles (CRÍTICO)
# Evita que nadie descargue tus logs o CSVs desde el navegador
<FilesMatch "\.(csv|log|txt|php|json)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>
# Permitir acceso a archivos públicos específicos si es necesario (ej. robots.txt)
<FilesMatch "(index\.html|robots\.txt|sitemap\.xml|manifest\.json)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>
# Permitir ejecución de scripts PHP pero no ver su código
<FilesMatch "\.php$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Bloquear acceso directo a la carpeta de datos
RewriteEngine On
RewriteRule ^data/ - [F,L]

# 2. Forzar HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 3. URLs Limpias (Quitar .html)
# Permite entrar a /checkout en lugar de /checkout.html
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# 4. Caché de navegador (Para que cargue ultra rápido)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/pdf "access plus 1 month"
  ExpiresByType text/x-javascript "access plus 1 month"
</IfModule>

# 5. Páginas de Error personalizadas
ErrorDocument 404 /404.html
ErrorDocument 403 /404.html
